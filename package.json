{
	"name": "directus-extension-blur-image-generator",
	"description": "Creating blurred images for assets with thumbhash and base64 format in Directus.",
	"version": "1.0.3",
	"icon": "extension",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/philipp-winterle/directus-extension-blur-image-generator.git"
	},
	"author": {
		"name": "Philipp Winterle",
		"email": "philipp.winterle@gmail.com"
	},
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-hook",
		"blur image generator",
		"blurhash",
		"thumbhash"
	],
	"type": "module",
	"release": {
		"tagFormat": "v${version}",
		"branches": [
			"main",
			"next"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": true
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
				}
			],
			"@semantic-release/github"
		]
	},
	"files": [
		"dist",
		"README.md"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^11.0.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"upgrade": "npx npm-check-updates --interactive --format group"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "13.0.4",
		"@directus/storage": "^12.0.0",
		"@directus/types": "^13.1.0",
		"@jimp/core": "^1.6.0",
		"@jimp/wasm-webp": "^1.6.0",
		"@jsquash/webp": "^1.4.0",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "^22.14.1",
		"@types/pino": "^7.0.5",
		"ansis": "^3.17.0",
		"blurhash": "^2.0.5",
		"jimp": "^1.6.0",
		"semantic-release": "^24.2.3",
		"thumbhash": "^0.1.1",
		"typescript": "^5.8.3",
		"vue": "^3.5.13"
	}
}
